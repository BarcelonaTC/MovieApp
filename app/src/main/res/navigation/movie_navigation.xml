<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_navigation"
    app:startDestination="@id/tempFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.karrar.movieapp.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.karrar.movieapp.ui.category.CategoryFragment"
        android:label="CategoryFragment"
        tools:layout="@layout/fragment_category" >
        <argument
            android:name="mediaId"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/tempFragment"
        android:name="com.karrar.movieapp.ui.category.temp.TempFragment"
        android:label="TempFragment"
        tools:layout="@layout/fragment_temp">
        <action
            android:id="@+id/action_tempFragment_to_categoryFragment"
            app:destination="@id/categoryFragment" />
    </fragment>

</navigation>