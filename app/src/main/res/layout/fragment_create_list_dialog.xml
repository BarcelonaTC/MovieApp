<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.karrar.movieapp.ui.myList.MyListsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_sheet_corners"
        android:paddingHorizontal="16dp"
        android:paddingVertical="@dimen/spacing_extra_large">

        <TextView
            android:id="@+id/primary_text"
            style="@style/SemiBold.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/plus_jakarta_sans_semibold"
            android:text="@string/create_new_collection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:onClick="@{()->viewModel.onCancelClick()}"
            android:src="@drawable/cancel_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/secondary_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/manrope_regular"
            android:text="Collection Name"
            android:textColor="@color/shade_secondary"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/primary_text" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/list_name"
            style="@style/Widget.App.TextInputLayout.Outlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:hintEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/secondary_name"
            app:startIconDrawable="@drawable/text_input_folder">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:afterTextChanged="@{(text) -> viewModel.onListNameInputChange(text)}"
                android:fontFamily="@font/manrope_medium"
                android:hint="@string/list_name"
                android:inputType="textPersonName"
                android:maxLength="15"
                android:maxLines="1"
                android:textColor="@color/shade_primary"
                android:textColorHint="@color/shade_tertiary"
                android:textCursorDrawable="@drawable/color_cursor" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/manrope_medium"
            android:onClick="@{()->viewModel.onCancelClick()}"
            android:outlineProvider="none"
            android:paddingVertical="@dimen/spacing_medium"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/button_onSecondary"
            app:backgroundTint="@color/button_secondary"
            app:cornerRadius="@dimen/spacing_small"
            app:layout_constraintEnd_toStartOf="@id/create_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/list_name" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/create_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:enabled="@{!viewModel.createListDialogUIState.mediaListName.empty}"
            android:fontFamily="@font/manrope_medium"
            android:outlineProvider="none"
            android:onClick="@{()->viewModel.onClickAddList()}"
            android:paddingVertical="@dimen/spacing_medium"
            android:text="@string/create"
            android:textAllCaps="false"
            android:textColor="@color/edit_text_button_color"
            app:backgroundTint="@color/color_states_material_button"
            app:cornerRadius="@dimen/spacing_small"
            app:layout_constraintBottom_toBottomOf="@+id/cancel_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cancel_button"
            app:layout_constraintTop_toTopOf="@+id/cancel_button" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

