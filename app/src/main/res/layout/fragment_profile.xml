<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.karrar.movieapp.ui.profile.ProfileViewModel" />

        <variable
            name="profileState"
            type="com.karrar.movieapp.ui.profile.ProfileUIState" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_screen">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profile_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="33dp"
            android:background="@drawable/profile_section_card"
            android:onClick="@{() -> viewModel.onClickEditProfile()}"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_actor"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@color/gray"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:posterImage="@{viewModel.profileDetailsUIState.avatarPath}"
                app:shapeAppearanceOverlay="@style/Circle"
                tools:background="@drawable/actor" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_name_actor"
                style="@style/TextStyle.Body.lg.medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="1dp"
                android:text="@{viewModel.profileDetailsUIState.name}"
                android:textColor="@color/shade_primary_color"
                app:layout_constraintStart_toEndOf="@id/image_actor"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Mustafa Ahmed" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_username"
                style="@style/TextStyle.Body.sm.medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:text="@{@string/at + viewModel.profileDetailsUIState.username}"
                app:layout_constraintStart_toEndOf="@id/image_actor"
                app:layout_constraintTop_toBottomOf="@id/text_name_actor"
                tools:text="\@mustafa_02" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_back"
                app:backgroundTint="@color/shade_tertiary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <HorizontalScrollView
            android:id="@+id/chips_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:overScrollMode="never"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:scrollbars="none"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_section">

            <LinearLayout
                android:id="@+id/chips_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.chip.Chip
                    android:id="@+id/History"
                    style="@style/TextStyle.Label.md.medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:onClick="@{() -> viewModel.onClickWatchHistory()}"
                    android:text="@string/history"
                    android:textAlignment="center"
                    android:textColor="@color/shade_primary"
                    android:textSize="12sp"
                    app:chipBackgroundColor="@color/background_card"
                    app:chipIcon="@drawable/ic_movie_history"
                    app:chipIconTint="@color/brand_primary"
                    app:chipMinHeight="39dp"
                    app:iconStartPadding="10dp"
                    app:textEndPadding="12dp"
                    app:textStartPadding="7dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/My_Collections"
                    style="@style/TextStyle.Label.md.medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="@string/my_collections"
                    android:textAlignment="center"
                    android:textColor="@color/shade_primary"
                    android:textSize="12sp"
                    app:chipBackgroundColor="@color/background_card"
                    app:chipIcon="@drawable/ic_my_collections"
                    app:chipIconTint="@color/brand_primary"
                    app:chipMinHeight="39dp"
                    app:iconStartPadding="10dp"
                    app:textEndPadding="12dp"
                    app:textStartPadding="7dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/My_Ratings"
                    style="@style/TextStyle.Label.md.medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{() -> viewModel.onClickRatedMovies()}"
                    android:text="@string/my_ratings"
                    android:textAlignment="center"
                    android:textColor="@color/shade_primary"
                    android:textSize="12sp"
                    app:chipBackgroundColor="@color/background_card"
                    app:chipIcon="@drawable/ic_movie_rating"
                    app:chipIconTint="@color/brand_primary"
                    app:chipMinHeight="39dp"
                    app:iconStartPadding="10dp"
                    app:textEndPadding="12dp"
                    app:textStartPadding="7dp" />
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/text_setting"
            style="@style/TextStyle.Title.sm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:text="Settings"
            android:textColor="@color/shade_primary_color"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chips_scroll" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/setting_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/profile_section_card"
            android:paddingHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_setting">


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/dark_mode"
                style="@style/SemiBold.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_moon"
                android:drawablePadding="8dp"
                android:paddingVertical="20dp"
                android:text="@string/dark_mode"
                app:layout_constraintEnd_toStartOf="@id/mySwitch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/mySwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onCheckedChanged="@{(button, isChecked) -> viewModel.onThemeSwitchChanged(isChecked)}"
                android:thumb="@drawable/switch_thumb"
                app:layout_constraintBottom_toTopOf="@id/language"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/dark_mode"
                app:layout_constraintTop_toTopOf="parent"
                app:switchMinWidth="40dp"
                app:track="@drawable/switch_track_background" />


            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/first_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:dividerColor="@color/shade_quaternary_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dark_mode" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/language"
                style="@style/SemiBold.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_language"
                android:drawablePadding="8dp"
                android:paddingVertical="20dp"
                android:text="@string/language"
                android:onClick="@{()-> viewModel.onClickLanguage()}"
                app:layout_constraintEnd_toStartOf="@id/language_arrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dark_mode" />

            <ImageView
                android:id="@+id/language_arrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_back"
                app:backgroundTint="@color/shade_tertiary"
                app:layout_constraintBottom_toTopOf="@id/content_preferences"
                android:onClick="@{()-> viewModel.onClickLanguage()}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/language"
                app:layout_constraintTop_toBottomOf="@id/dark_mode" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/second_divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:dividerColor="@color/shade_quaternary_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/language" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/content_preferences"
                style="@style/SemiBold.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_content_preferences"
                android:drawablePadding="8dp"
                android:paddingVertical="20dp"
                android:text="@string/content_preferences"
                app:layout_constraintEnd_toStartOf="@id/content_preferences_arrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/language" />

            <ImageView
                android:id="@+id/content_preferences_arrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_back"
                app:backgroundTint="@color/shade_tertiary"
                app:layout_constraintBottom_toTopOf="@id/text_log_out"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/content_preferences"
                app:layout_constraintTop_toBottomOf="@id/language" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/third_divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:dividerColor="@color/shade_quaternary_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/content_preferences" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_log_out"
                style="@style/SemiBold.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_movie_logout"
                android:drawablePadding="8dp"
                android:paddingVertical="20dp"
                android:onClick="@{()->viewModel.showLogOutBottomSheet()}"
                android:text="@string/logout"
                android:textColor="@color/additional_primary_red"
                app:layout_constraintEnd_toStartOf="@id/log_out_arrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/content_preferences" />

            <ImageView
                android:id="@+id/log_out_arrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_back"
                android:onClick="@{()->viewModel.showLogOutBottomSheet()}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/text_log_out"
                app:layout_constraintTop_toBottomOf="@id/content_preferences"
                app:tint="@color/additional_primary_red" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/text_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/version_1_0_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/setting_section" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="128dp"
            android:layout_height="128dp"
            app:isVisible="@{viewModel.profileDetailsUIState.isLoading}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/loading_animation"
            tools:visibility="gone" />

        <ImageView
            android:id="@+id/vector_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:src="@drawable/log_in"
            app:layout_constraintBottom_toTopOf="@+id/button_nav_login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_message_wrong_title"
            style="@style/SemiBold.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:text="@string/log_in"
            android:textColor="@color/brand_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vector_image" />

        <TextView
            android:id="@+id/text_message_wrong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_extra_large"
            android:layout_marginTop="@dimen/spacing_small"
            android:text="@string/you_must_be_logged_in_to_see_the_profile"
            android:textAlignment="center"
            android:textAppearance="@style/Regular.Medium.Secondary"
            android:textColor="@color/shade_secondary_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_message_wrong_title" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_nav_login"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="@dimen/spacing_large"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:onClick="@{() -> viewModel.onClickLogin()}"
            android:text="@string/login"
            android:textAppearance="@style/SemiBold.Medium"
            android:textColor="@color/white_primary"
            app:backgroundTint="@color/color_states_material_button"
            app:cornerRadius="@dimen/radius_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_lost_connection"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginBottom="@dimen/spacing_small"
            app:layout_constraintBottom_toTopOf="@+id/title_lost_connection"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/lost_internet_animation" />

        <TextView
            android:id="@+id/title_lost_connection"
            style="@style/SemiBold.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_extra_large"
            android:text="@string/oops"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/description_lost_connection"
            style="@style/Regular.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:gravity="center"
            android:text="@string/description"
            android:textColor="@color/brand_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_lost_connection" />

        <Button
            android:id="@+id/button_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:onClick="@{() -> viewModel.getData()}"
            android:text="@string/retry"
            android:textColor="@color/white_primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description_lost_connection" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_when_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="text_setting,
                    chips_scroll,
                    setting_section,
                    text_version,
                    profile_section"
            app:showProfileWhenSuccess="@{viewModel.profileDetailsUIState.username}"
            tools:visibility="visible" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_when_no_internet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="title_lost_connection,animation_lost_connection,description_lost_connection,button_retry"
            app:isFail="@{viewModel.profileDetailsUIState.error}"
            app:isLoggedIn="@{viewModel.profileDetailsUIState.loggedIn}" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_when_no_logged_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="
            text_message_wrong,
            vector_image,
            text_message_wrong_title,
            button_nav_login,"
            app:showWhenNoLoggedIn="@{viewModel.profileDetailsUIState.isLoggedIn}" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>