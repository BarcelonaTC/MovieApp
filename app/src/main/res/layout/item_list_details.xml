<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.karrar.movieapp.ui.myList.listDetails.listDetailsUIState.SavedMediaUIState" />
        <variable
            name="listener"
            type="com.karrar.movieapp.ui.myList.listDetails.ListDetailsInteractionListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="16dp"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/delete_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/delete_card_shape"
            android:src="@drawable/trash"
            android:scaleType="centerInside"
            android:translationZ="6dp"
            android:visibility="invisible"
            android:contentDescription="@string/delete"
            app:layout_constraintTop_toTopOf="@+id/movie_details_card"
            app:layout_constraintBottom_toBottomOf="@+id/movie_details_card"
            app:layout_constraintEnd_toEndOf="parent"
             />

        <androidx.cardview.widget.CardView
            android:id="@+id/movie_details_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:onClick="@{() -> listener.onItemClick(item)}"
            app:cardCornerRadius="@dimen/radius_small"
            app:cardElevation="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_card">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image_movie"
                    android:layout_width="64dp"
                    android:layout_height="88dp"
                    android:background="@drawable/ic_media_background"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:posterImage="@{item.image}"
                    app:shapeAppearanceOverlay="@style/CardCorners.ImageShapable"
                    tools:src="@drawable/test" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_title_movie"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/spacing_small"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="4dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/manrope_medium"
                    android:lines="1"
                    android:text="@{item.title}"
                    android:textColor="@color/shade_primary"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/text_rate_movie"
                    app:layout_constraintEnd_toStartOf="@+id/text_rate_movie"
                    app:layout_constraintStart_toEndOf="@id/image_movie"
                    app:layout_constraintTop_toTopOf="@+id/text_rate_movie"
                    tools:text="The Mandalorian" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_rate_movie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_medium"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="@dimen/spacing_small"
                    android:drawableEnd="@drawable/yellow_star"
                    android:drawablePadding="@dimen/spacing_too_small"
                    android:fontFamily="@font/manrope_medium"
                    android:gravity="center"
                    android:text="@{String.valueOf(item.voteAverage)}"
                    android:textColor="@color/shade_primary"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="7.5" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/genres_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/manrope_regular"
                    android:text="@{item.movieGenre}"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/text_title_movie"
                    app:layout_constraintTop_toBottomOf="@+id/text_title_movie"
                    tools:text="Drama, Action, Crime, Thriller" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawableStart="@drawable/clock_icon"
                    android:drawablePadding="@dimen/spacing_too_small"
                    android:fontFamily="@font/manrope_regular"
                    android:text="@{item.runtime}"
                    android:textColor="@color/shade_secondary"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/genres_Text"
                    app:layout_constraintTop_toBottomOf="@+id/genres_Text"
                    tools:text="2h 32m" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:drawableStart="@drawable/calendar_icon"
                    android:drawablePadding="4dp"
                    android:text="@{item.releaseDate}"
                    android:textColor="@color/shade_secondary"
                    android:textSize="12sp"
                    app:fontFamily="@font/manrope_regular"
                    app:layout_constraintBottom_toBottomOf="@+id/time_text"
                    app:layout_constraintStart_toEndOf="@+id/time_text"
                    app:layout_constraintTop_toTopOf="@+id/time_text"
                    tools:text="2008, Jul 18" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
