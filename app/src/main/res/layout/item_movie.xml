<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="listener"
            type="com.karrar.movieapp.ui.home.adapters.MovieInteractionListener" />

        <variable
            name="item"
            type="com.karrar.movieapp.domain.models.Movie" />

        <variable
            name="type"
            type="com.karrar.movieapp.domain.enums.Type" />

    </data>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="128dp"
        android:layout_height="176dp"
        android:layout_marginHorizontal="@dimen/spacing_small"
        android:onClick="@{ () -> listener.onClickMovie(item.movieID,type)}"
        android:scaleType="centerCrop"
        app:posterImage="@{item.imageUrl}"
        app:shapeAppearanceOverlay="@style/CardCorners.Medium" />
</layout>
