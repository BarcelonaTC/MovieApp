<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.karrar.movieapp.ui.explore.TrendyMediaUIState" />

        <variable
            name="listener"
            type="com.karrar.movieapp.ui.explore.TrendInteractionListener" />

    </data>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_trend"
        android:layout_width="match_parent"
        android:layout_height="234dp"
        app:layout_constraintDimensionRatio="1:1.4"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/CardCorners.Medium"
        tools:src="@drawable/trend"
        app:posterImage="@{item.mediaImage}"
        android:onClick="@{() -> listener.onClickTrend(item.mediaID,item.mediaType)}"
        android:layout_marginHorizontal="@dimen/spacing_small"
        android:layout_marginVertical="@dimen/spacing_small"
        />
</layout>