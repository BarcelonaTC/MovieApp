<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.karrar.movieapp.ui.myList.myListUIState.CreatedListUIState" />

        <variable
            name="listener"
            type="com.karrar.movieapp.ui.myList.CreatedListInteractionListener" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginVertical="@dimen/spacing_small"
        android:backgroundTint="@color/background_card"
        android:onClick="@{()->listener.onListClick(item)}"
        app:cardCornerRadius="@dimen/radius_small"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/folder_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:src="@drawable/folder"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/movie_name"
                android:textSize="14sp"
                android:textColor="@color/shade_primary"
                android:fontFamily="@font/manrope_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:text="@{item.name}"
                app:layout_constraintStart_toEndOf="@+id/folder_Id"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/my_favorite_tv_shows" />

            <TextView
                android:layout_width="wrap_content"
                android:textFontWeight="400"
                android:fontFamily="@font/manrope_regular"
                android:layout_height="wrap_content"
                android:textColor="@color/shade_secondary"
                android:layout_marginTop="4dp"
                android:text="@{@string/items(item.mediaCounts)}"
                app:layout_constraintStart_toStartOf="@+id/movie_name"
                app:layout_constraintTop_toBottomOf="@+id/movie_name"
                tools:text="14 movies" />

            <ImageView
                app:layout_constraintEnd_toEndOf = "parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/alt_arrow_right"
                android:layout_marginEnd="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>