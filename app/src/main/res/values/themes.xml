<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="colorPrimary">@color/brand_color</item>
        <item name="colorPrimaryVariant">@color/background_color</item>

        <item name="android:statusBarColor">@color/background_color</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

    </style>


    <style name="SemiBold">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/shade_primary_color</item>
    </style>

    <style name="SemiBold.LargeTitle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SemiBold.MediumTitle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SemiBold.SmallText">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">12sp</item>
    </style>



    <style name="Regular">
        <item name="android:fontFamily">poppins_regular</item>
    </style>

    <style name="Regular.BodyMedium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Regular.BodyMedium.Primary">
        <item name="android:textSize">@color/shade_primary_color</item>
    </style>

    <style name="Regular.BodyMedium.Secondary">
        <item name="android:textSize">@color/shade_secondary_color</item>
    </style>


    <style name="Regular.BodySmall">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Regular.BodySmall.Secondary">
        <item name="android:textSize">@color/shade_secondary_color</item>
    </style>

    <style name="Regular.BodySmall.ternary">
        <item name="android:textSize">@color/shade_ternary_color</item>
    </style>

</resources>