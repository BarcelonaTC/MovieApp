<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorPrimaryVariant">@color/background_color</item>
        <item name="android:statusBarColor">@color/background_screen</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="textInputStyle">@style/Login</item>
        <item name="actionBarTheme">@style/MyTheme</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

    </style>


    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_corners</item>
    </style>


    <style name="MyTheme" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">@color/background_screen</item>
        <item name="android:textColorPrimary">@color/shade_primary_color</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="SemiBold">
        <item name="android:fontFamily">@font/plus_jakarta_sans_semibold</item>
        <item name="android:textColor">@color/shade_primary_color</item>
    </style>

    <style name="SemiBold.Large">
        <item name="android:textSize">@dimen/text_title_lg</item>
    </style>

    <style name="SemiBold.Medium">
        <item name="android:textSize">@dimen/text_body_md</item>
    </style>

    <style name="SemiBold.Small">
        <item name="android:textSize">@dimen/text_small</item>
    </style>


    <style name="bold">
        <item name="android:fontFamily">@font/manrope_bold</item>
        <item name="android:textColor">@color/shade_primary</item>
    </style>

    <style name="bold.Large">
        <item name="android:textSize">@dimen/text_title_lg</item>
    </style>

    <style name="bold.Medium">
        <item name="android:textSize">@dimen/text_body_md</item>
    </style>

    <style name="bold.Small">
        <item name="android:textSize">@dimen/text_small</item>
    </style>


    <style name="Regular">
        <item name="android:fontFamily">@font/manrope_regular</item>
    </style>

    <style name="Regular.Medium">
        <item name="android:textSize">@dimen/text_body_md</item>
        <item name="android:textColor">@color/shade_secondary</item>

    </style>

    <style name="Regular.Medium.Primary">
        <item name="android:textColor">@color/shade_primary_color</item>
    </style>

    <style name="Regular.Medium.Secondary">
        <item name="android:textColor">@color/shade_secondary_color</item>
    </style>

    <style name="Medium">
        <item name="android:fontFamily">@font/manrope_medium</item>

    </style>

    <style name="Medium.onPrimary">
        <item name="android:textColor">@color/button_onPrimary</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>
    <style name="Medium.TitleSmall">
        <item name="android:textSize">@dimen/text_title_sm</item>
        <item name="android:textColor">@color/shade_primary</item>
    </style>

    <style name="Medium.BodySmall">
        <item name="android:textSize">@dimen/text_body_sm</item>
        <item name="android:textColor">@color/shade_secondary</item>
    </style>

    <style name="Medium.BodyMedium">
        <item name="android:textSize">@dimen/text_body_md</item>
        <item name="android:textColor">@color/button_onSecondary</item>
    </style>

    <style name="Medium.Body">
        <item name="android:textSize">@dimen/text_body_md</item>
        <item name="android:textColor">@color/button_onPrimary</item>
    </style>



    <style name="Regular.Small">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/shade_primary_color</item>
    </style>

    <style name="Regular.Small.Secondary">
        <item name="android:textColor">@color/shade_secondary_color</item>
    </style>

    <style name="Regular.Small.ternary">
        <item name="android:textColor">@color/shade_ternary_color</item>
    </style>



    <style name="CardCorners">
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="CardCorners.Small">
        <item name="cornerSize">@dimen/radius_small</item>
    </style>

    <style name="CardCorners.Medium">
        <item name="cornerSize">@dimen/radius_md</item>
    </style>

    <style name="CardCorners.Custom">
        <item name="cornerSizeTopLeft">@dimen/radius_medium_small</item>
        <item name="cornerSizeTopRight">@dimen/radius_medium_small</item>
        <item name="cornerSizeBottomLeft">@dimen/radius_medium_small</item>
    </style>

    <style name="Login" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/shade_secondary_color</item>
        <item name="boxBackgroundColor">@color/text_field_background_color</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_small</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_small</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_small</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_small</item>
        <item name="hintTextAppearance">@style/Regular.Medium.Primary</item>
        <item name="startIconTint">@color/shade_secondary_color</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/design_default_color_error</item>
        <item name="errorEnabled">true</item>

    </style>

    <style name="Theme.MovieApp.SplashScreen" parent="Theme.SplashScreen.IconBackground">
        <item name="postSplashScreenTheme">@style/Theme.MovieApp</item>
        <item name="windowSplashScreenBackground">@color/background_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
    </style>

    <style name="CircleImage">
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedCorner12" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="CardCorners.BottomMedium">
        <item name="cornerSizeBottomLeft">@dimen/radius_md</item>
        <item name="cornerSizeBottomRight">@dimen/radius_md</item>
    </style>


    <style name="Circle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Chip.Regular.Small" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipStrokeColor">@color/chip_stroke</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="chipChip" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipStrokeColor">@color/brand_color</item>
        <item name="chipSurfaceColor">@color/shade_secondary_color</item>
        <item name="chipStrokeWidth">@dimen/cardview_compat_inset_shadow</item>
    </style>

    <style name="Colors_Widget.MaterialComponents.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/selector_chip_background</item>
        <item name="chipStrokeColor">@color/selector_chip_stroke</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:textColor">@color/selector_chip_text</item>
        <item name="chipCornerRadius">1000dp</item>
    </style>


    <style name="Regular.Small.Primary">
        <item name="android:textColor">@color/shade_primary_color</item>

    </style>

    <style name="Widget.App.TextInputLayout.Outlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/background_card</item>
        <item name="boxStrokeColor">@color/edit_text_stroke</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeErrorColor">@color/additional_primary_red</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/spacing12</item>
        <item name="boxCornerRadiusTopEnd">@dimen/spacing12</item>
        <item name="boxCornerRadiusTopStart">@dimen/spacing12</item>
        <item name="boxCornerRadiusBottomStart">@dimen/spacing12</item>
    </style>

    <style name="TextStyle" />

    <style name="TextStyle.Title">
        <item name="android:fontFamily">@font/manrope_medium</item>
    </style>

    <style name="TextStyle.Title.xl">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextStyle.Title.lg">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextStyle.Title.md">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextStyle.Title.sm">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyle.Body" />

    <style name="TextStyle.Body.lg">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyle.Body.md">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextStyle.Body.sm">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextStyle.Body.lg.regular">
        <item name="android:fontFamily">@font/manrope_regular</item>
    </style>

    <style name="TextStyle.Body.md.regular">
        <item name="android:fontFamily">@font/manrope_regular</item>
    </style>

    <style name="TextStyle.Body.sm.regular">
        <item name="android:fontFamily">@font/manrope_regular</item>
    </style>

    <style name="TextStyle.Body.lg.medium">
        <item name="android:fontFamily">@font/manrope_medium</item>
    </style>

    <style name="TextStyle.Body.md.medium">
        <item name="android:fontFamily">@font/manrope_medium</item>
    </style>

    <style name="TextStyle.Body.sm.medium">
        <item name="android:fontFamily">@font/manrope_medium</item>
    </style>

    <style name="TextStyle.Body.lg.semi_bold">
        <item name="android:fontFamily">@font/manrope_semi_bold</item>
    </style>

    <style name="TextStyle.Body.md.semi_bold">
        <item name="android:fontFamily">@font/manrope_semi_bold</item>
    </style>

    <style name="TextStyle.Body.sm.semi_bold">
        <item name="android:fontFamily">@font/manrope_semi_bold</item>
    </style>

    <style name="TextStyle.Label" />

    <style name="TextStyle.Label.md">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextStyle.Label.md.regular">
        <item name="android:fontFamily">@font/manrope_regular</item>
    </style>

    <style name="TextStyle.Label.md.medium">
        <item name="android:fontFamily">@font/manrope_medium</item>
    </style>

    <style name="TextStyle.Label.md.semi_bold">
        <item name="android:fontFamily">@font/manrope_semi_bold</item>
    </style>


</resources>